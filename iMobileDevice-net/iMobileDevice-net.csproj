    </Content>
    <Content Include="$(NuGetPackageFolders)/libimobiledevice.redist/$(libimobiledevice)build/native/bin/Win32/v140/Release/*.*">
      <PackagePath>runtimes/win7-x86/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(NuGetPackageFolders)/libimobiledevice.symbols/$(libimobiledevice)/build/native/bin/Win32/v140/Release/*.pdb">
