    </Content>
    <Content Include="$(NuGetPackageFolders)/libssh2.redist/$(libssh2)/build/native/bin/v110/x64/Release/dynamic/cdecl/*.dll">
      <PackagePath>runtimes/win7-x64/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
    </Content>

    <!-- win7-x86 files which come from NuGet packages-->
