    <Content Include="$(NuGetPackageFolders)/openssl.v140.windesktop.msvcstl.dyn.rt-dyn.x64/$(openssl)/lib/native/v140/windesktop/msvcstl/dyn/rt-dyn/x64/release/*.dll">
      <PackagePath>runtimes/win7-x64/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(NuGetPackageFolders)/zlib.v140.windesktop.msvcstl.dyn.rt-dyn/$(zlib)/lib/native/v140/windesktop/msvcstl/dyn/rt-dyn/x64/Release/*.dll">
      <PackagePath>runtimes/win7-x64/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(NuGetPackageFolders)/fix8.dependencies.getopt/$(getopt)/build/native/bin/x64/v140/Release/Desktop/*.dll">
      <PackagePath>runtimes/win7-x64/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
